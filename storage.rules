rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can upload to their own directories
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Project assets are accessible by project owners
    match /projects/{projectId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
        firestore.get(/databases/(default)/documents/projects/$(projectId)).data.ownerId == request.auth.uid;
    }
    
    // Generated content (videos, images) accessible by authenticated users
    match /generated/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only server can write generated content
    }
  }
}
